{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "strict": true
  },
  "typeRoots": ["@types", "node_modules/@types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
